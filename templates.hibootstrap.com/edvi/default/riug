      const studentID = `${firstName}-${lastName}${randomNum}`.replace(/\s+/g, '').toLowerCase();

      // ‚úÖ Save student record under custom ID (prevents overwriting)
      await set(ref(db, "Admission Form/" + studentID), student);

      showModal(`‚úÖ Admission Form Submitted Successfully!`);
      document.getElementById("admissionForm").reset();
    } catch (error) {
      showModal("‚ùå Error: " + error.message);
    }
  });

